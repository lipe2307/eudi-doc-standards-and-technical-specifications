{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "transaction_id": {
            "type": "string",
            "maxLength": 36,
            "minLength": 1,
            "examples": [
                "8D8AC610-566D-4EF0-9C22-186B2A5ED793"
            ]
        },
        "payee_id": {
            "type": "string",
            "maxLength": 50,
            "minLength": 1,
            "examples": [
                "8D8AC610-566D-4EF0-9C22-186B2A5ED793"
            ]
        },
        "execution_date": {
            "type": "string",
            "format": "date-time",
            "examples": [
                "2025-11-13T20:20:39+00:00"
            ]
        },
        "amount": {
            "type": "object",
            "properties": {
                "required": [
                    "value",
                    "currency"
                ],
                "value": {
                    "type": "number",
                    "minLength": 4,
                    "maxLength": 16,
                    "examples": [
                        1595.00,
                        14.22,
                        0.53,
                        -40.78
                    ]
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "minLength": 3,
                    "maxLength": 3,
                    "examples": [
                        "EUR",
                        "SEK"
                    ]
                }
            }
        },
        "payee": {
            "type": "string",
            "maxLength": 100,
            "examples": [
                "Awesome Merchant"
            ]
        },
        "recurring": {
            "type": "object",
            "properties": {
                "occurrences": {
                    "type": "integer",
                    "minimum": 2,
                    "examples": [
                        4
                    ]
                },
                "total_amount": {
                    "type": "object",
                    "properties": {
                        "required": [
                            "value",
                            "currency"
                        ],
                        "value": {
                            "type": "number",
                            "minLength": 4,
                            "maxLength": 16,
                            "examples": [
                                1595.00,
                                14.22,
                                0.53,
                                -40.78
                            ]
                        },
                        "currency": {
                            "type": "string",
                            "pattern": "^[A-Z]{3}$",
                            "minLength": 3,
                            "maxLength": 3,
                            "examples": [
                                "EUR",
                                "SEK"
                            ]
                        }
                    }
                },
                "min_distance": {
                    "type": "integer",
                    "minimum": 1,
                    "examples": [
                        30,
                        15
                    ]
                },
                "variable_amount": {
                    "type": "boolean",
                    "examples": [
                        true
                    ]
                },
                "apr": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 100.0,
                    "examples": [
                        4.6
                    ]
                }
            }
        }
    },
    "additionalProperties": true,
    "required": [
        "transaction_id",
        "amount",
        "payee"
    ]
}
