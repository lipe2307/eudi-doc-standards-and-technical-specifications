{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "transaction_id": {
            "type": "string",
            "maxLength": 36,
            "minLength": 1,
            "examples": [
                "8D8AC610-566D-4EF0-9C22-186B2A5ED793"
            ]
        },
        "amount": {
            "type": "object",
            "properties": {
                "required": [
                    "value",
                    "currency"
                ],
                "value": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 15,
                    "examples": [
                        "1595.00",
                        "14.22",
                        "0.53"
                    ]
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "minLength": 3,
                    "maxLength": 3,
                    "examples": [
                        "EUR",
                        "NOK"
                    ]
                }
            }
        },
        "execution_date": {
            "type": "string",
            "format": "date-time",
            "examples": [
                "2025-11-13T20:20:39+00:00"
            ]
        },
        "reference": {
            "type": "string",
            "maxLength": 50,
            "minLength": 1,
            "examples": [
                "8D8AC610-566D-4EF0-9C22-186B2A5ED793"
            ]
        },
        "purpose": {
            "type": "string",
            "maxLength": 1000,
            "examples": [
                "Pay monthly bill"
            ]
        },
        "nbf": {
            "type": "string",
            "format": "date-time",
            "examples": [
                "2025-11-13T20:20:39+00:00"
            ]
        },
        "exp": {
            "type": "string",
            "format": "date-time",
            "examples": [
                "2025-12-13T20:20:39+00:00"
            ]
        },
        "payment": {
            "$ref": "ts12-urn:eudi:sca:payment_authentication:1-data-model.json"
        }
    },
    "additionalProperties": true,
    "required": [
        "purpose"
    ]
}
